      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      margin-top: {{ section.settings.margin_top_mobile }}px;
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
    }

    {% if section.settings.nascondi_mobile %}
      #shopify-section-{{ section.id }} {
        display: none;
      }
    {% endif %}
  }
</style>

<div class="fr-hero-lavorazioni-wrapper">
  {% if section.settings.show_header %}
    <div class="fr-hero-header">
      <h2 class="fr-hero-title">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle != blank %}
        <p class="fr-hero-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
      <div class="fr-hero-line"></div>
    </div>
  {% endif %}

  <div class="fr-hero-lavorazioni-container">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'lavorazione' %}
          {% assign index = forloop.index %}
          <div class="fr-hero-lavorazione">
            <div class="fr-hero-image-section">
              {% if block.settings.image != blank %}
                {{ block.settings.image | image_url: width: 1600 | image_tag: 
                  class: 'fr-hero-image',
                  loading: 'lazy'
                }}
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'fr-hero-image' }}
              {% endif %}
              {% if block.settings.tempo != blank %}
                <div class="fr-tempo-hero">{{ block.settings.tempo }}</div>
              {% endif %}
            </div>
            
            <div class="fr-hero-content">
              <span class="fr-hero-number">{{ index | prepend: '0' }}</span>
              <h3 class="fr-hero-name">{{ block.settings.nome }}</h3>
              <p class="fr-hero-description">{{ block.settings.descrizione }}</p>
              
              {% if block.settings.show_details %}
                <div class="fr-hero-details">
                  {% if block.settings.dettaglio_1 != blank %}
                    <div class="fr-hero-detail">
                      <span class="fr-hero-icon"></span>
                      <span>{{ block.settings.dettaglio_1 }}</span>
                    </div>
                  {% endif %}
                  {% if block.settings.dettaglio_2 != blank %}
                    <div class="fr-hero-detail">
                      <span class="fr-hero-icon"></span>
                      <span>{{ block.settings.dettaglio_2 }}</span>
                    </div>
                  {% endif %}
                  {% if block.settings.dettaglio_3 != blank %}
                    <div class="fr-hero-detail">
                      <span class="fr-hero-icon"></span>
                      <span>{{ block.settings.dettaglio_3 }}</span>
                    </div>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.show_process %}
                <div class="fr-hero-process">
                  {% if block.settings.step_1 != blank %}
                    <div class="fr-hero-step">
                      <div class="fr-step-label">Fase 1</div>
                      <div class="fr-step-text">{{ block.settings.step_1 }}</div>
                    </div>
                  {% endif %}
                  {% if block.settings.step_2 != blank %}
                    <div class="fr-hero-step">
                      <div class="fr-step-label">Fase 2</div>
                      <div class="fr-step-text">{{ block.settings.step_2 }}</div>
                    </div>
                  {% endif %}
                  {% if block.settings.step_3 != blank %}
                    <div class="fr-hero-step">
                      <div class="fr-step-label">Fase 3</div>
                      <div class="fr-step-text">{{ block.settings.step_3 }}</div>
                    </div>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.cta_text != blank %}
                <a href="{{ block.settings.cta_link }}" class="fr-hero-cta-individual">
                  {{ block.settings.cta_text }}
                </a>
              {% endif %}
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>

  {% if section.settings.show_footer %}
    <div class="fr-hero-footer">
      {% if section.settings.footer_title != blank %}
        <h3 class="fr-hero-footer-title">{{ section.settings.footer_title }}</h3>
      {% endif %}
      {% if section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="fr-hero-cta-button">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  {% endif %}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.querySelector('#shopify-section-{{ section.id }}');
    const lavorazioni = section.querySelectorAll('.fr-hero-lavorazione');
    
    // Intersection Observer per animazioni on scroll
    const observerOptions = {
      threshold: 0.2,
      rootMargin: '0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }
      });
    }, observerOptions);
    
    lavorazioni.forEach(lavorazione => {
      lavorazione.style.opacity = '0';
      lavorazione.style.transform = 'translateY(50px)';
      lavorazione.style.transition = 'all 1s cubic-bezier(0.19, 1, 0.22, 1)';
      observer.observe(lavorazione);
    });

    // Rimosso effetto parallax per migliorare le performance
  });
</script>

