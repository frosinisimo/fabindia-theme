<style>
  /* Reset e variabili base */
  #shopify-section-{{ section.id }} * {
    box-sizing: border-box;
  }

  /* Container principale */
  #shopify-section-{{ section.id }} .fr-hero-lavorazioni-wrapper {
    background: {{ section.settings.background_color }};
    position: relative;
    overflow: hidden;
  }

  /* Header HERO sezione */
  #shopify-section-{{ section.id }} .fr-hero-header {
    text-align: center;
    padding: 0 20px;
    margin-bottom: 100px;
    position: relative;
  }

  #shopify-section-{{ section.id }} .fr-hero-title {
    font-size: 72px;
    font-weight: 200;
    color: {{ section.settings.title_color }};
    margin: 0 0 30px;
    letter-spacing: 3px;
    text-transform: uppercase;
    line-height: 1.1;
    opacity: 0;
    animation: fadeInUp 1s ease forwards;
  }

  #shopify-section-{{ section.id }} .fr-hero-subtitle {
    font-size: 24px;
    color: {{ section.settings.subtitle_color }};
    margin: 0 auto;
    font-weight: 300;
    line-height: 1.6;
    max-width: 800px;
    opacity: 0;
    animation: fadeInUp 1s ease 0.2s forwards;
  }

  /* Decorative line */
  #shopify-section-{{ section.id }} .fr-hero-line {
    width: 120px;
    height: 1px;
    background: {{ section.settings.accent_color }};
    margin: 40px auto;
    opacity: 0;
    animation: expandWidth 1s ease 0.4s forwards;
  }

  /* Layout HERO alternato */
  #shopify-section-{{ section.id }} .fr-hero-lavorazione {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 80vh;
    margin-bottom: 0;
    position: relative;
    opacity: 0;
    animation: fadeIn 1s ease 0.6s forwards;
  }

  #shopify-section-{{ section.id }} .fr-hero-lavorazione:nth-child(even) {
    direction: rtl;
  }

  #shopify-section-{{ section.id }} .fr-hero-lavorazione:nth-child(even) > * {
    direction: ltr;
  }

  /* Immagine HERO */
  #shopify-section-{{ section.id }} .fr-hero-image-section {
    position: relative;
    overflow: hidden;
    background: #F0E6E0;
  }

  #shopify-section-{{ section.id }} .fr-hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1);
    transition: transform 1.5s cubic-bezier(0.19, 1, 0.22, 1);
  }

  #shopify-section-{{ section.id }} .fr-hero-lavorazione:hover .fr-hero-image {
    transform: scale(1.05);
  }

  /* Overlay tempo HERO */
  #shopify-section-{{ section.id }} .fr-tempo-hero {
    position: absolute;
    top: 60px;
    left: 60px;
    background: {{ section.settings.tempo_background }};
    color: {{ section.settings.tempo_color }};
    padding: 20px 30px;
    font-size: 18px;
    font-weight: 400;
    letter-spacing: 1px;
    text-transform: uppercase;
    z-index: 2;
  }

  /* Contenuto HERO */
  #shopify-section-{{ section.id }} .fr-hero-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 100px;
    background: {{ section.settings.content_background }};
    position: relative;
    z-index: 1;
  }

  /* Numero grande decorativo */
  #shopify-section-{{ section.id }} .fr-hero-number {
    position: absolute;
    top: 60px;
    right: 60px;
    font-size: 180px;
    font-weight: 100;
    color: {{ section.settings.number_color }};
    opacity: 0.1;
    line-height: 1;
    font-family: 'Georgia', serif;
    pointer-events: none;
    z-index: 0;
  }

  #shopify-section-{{ section.id }} .fr-hero-name {
    font-size: 48px;
    font-weight: 300;
    color: {{ section.settings.card_title_color }};
    margin: 0 0 30px;
    text-transform: uppercase;
    letter-spacing: 2px;
    position: relative;
    z-index: 1;
  }

  #shopify-section-{{ section.id }} .fr-hero-description {
    font-size: 20px;
    color: {{ section.settings.card_text_color }};
    line-height: 1.8;
    margin: 0 0 40px;
    max-width: 500px;
    position: relative;
    z-index: 1;
  }

  /* Dettagli HERO */
  #shopify-section-{{ section.id }} .fr-hero-details {
    margin-top: 40px;
    position: relative;
    z-index: 1;
  }

  #shopify-section-{{ section.id }} .fr-hero-detail {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    font-size: 18px;
    color: {{ section.settings.detail_color }};
    opacity: 1;
    position: relative;
    z-index: 1;
  }

  #shopify-section-{{ section.id }} .fr-hero-icon {
    width: 40px;
    height: 40px;
    background: {{ section.settings.icon_background }};
    border-radius: 50%;
    margin-right: 20px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  #shopify-section-{{ section.id }} .fr-hero-icon::after {
    content: '';
    width: 8px;
    height: 8px;
    background: {{ section.settings.icon_color }};
    border-radius: 50%;
  }

  /* CTA individuale */
  #shopify-section-{{ section.id }} .fr-hero-cta-individual {
    display: inline-flex;
    align-items: center;
    margin-top: 40px;
    font-size: 16px;
    color: {{ section.settings.link_color }};
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
    z-index: 2;
  }

  #shopify-section-{{ section.id }} .fr-hero-cta-individual::after {
    content: '→';
    margin-left: 10px;
    transition: transform 0.3s ease;
  }

  #shopify-section-{{ section.id }} .fr-hero-cta-individual:hover {
    color: {{ section.settings.link_hover_color }};
  }

  #shopify-section-{{ section.id }} .fr-hero-cta-individual:hover::after {
    transform: translateX(5px);
  }

  /* Process steps HERO */
  #shopify-section-{{ section.id }} .fr-hero-process {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    margin-top: 50px;
    padding-top: 40px;
    border-top: 1px solid rgba(0,0,0,0.08);
    position: relative;
    z-index: 1;
  }

  #shopify-section-{{ section.id }} .fr-hero-step {
    text-align: left;
  }

  #shopify-section-{{ section.id }} .fr-step-label {
    font-size: 14px;
    color: {{ section.settings.accent_color }};
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 10px;
    font-weight: 500;
  }

  #shopify-section-{{ section.id }} .fr-step-text {
    font-size: 16px;
    color: {{ section.settings.card_text_color }};
    line-height: 1.6;
  }

  /* Footer CTA sezione */
  #shopify-section-{{ section.id }} .fr-hero-footer {
    text-align: center;
    padding: 100px 20px;
    background: linear-gradient(to bottom, transparent, {{ section.settings.footer_gradient }});
  }

  #shopify-section-{{ section.id }} .fr-hero-footer-title {
    font-size: 36px;
    font-weight: 300;
    color: {{ section.settings.footer_title_color }};
    margin: 0 0 40px;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  #shopify-section-{{ section.id }} .fr-hero-cta-button {
    display: inline-block;
    padding: 20px 60px;
    background: {{ section.settings.cta_background }};
    color: {{ section.settings.cta_color }};
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
    border: 2px solid transparent;
    position: relative;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .fr-hero-cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: {{ section.settings.cta_hover_background }};
    transition: left 0.4s cubic-bezier(0.19, 1, 0.22, 1);
    z-index: -1;
  }

  #shopify-section-{{ section.id }} .fr-hero-cta-button:hover::before {
    left: 0;
  }

  #shopify-section-{{ section.id }} .fr-hero-cta-button:hover {
    color: {{ section.settings.cta_hover_color }};
    border-color: {{ section.settings.cta_hover_background }};
  }

  /* Animazioni */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes expandWidth {
    from {
      width: 0;
      opacity: 0;
    }
    to {
      width: 120px;
      opacity: 1;
    }
  }

  /* Responsive Design Mobile */
  @media only screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .fr-hero-title {
      font-size: 36px;
      letter-spacing: 1px;
      margin-bottom: 20px;
    }

    #shopify-section-{{ section.id }} .fr-hero-subtitle {
