    }

    #shopify-section-{{ section.id }} .fr-hero-description {
      font-size: 16px;
    }

    #shopify-section-{{ section.id }} .fr-hero-detail {
      font-size: 15px;
    }

    #shopify-section-{{ section.id }} .fr-hero-icon {
      width: 32px;
      height: 32px;
    }

    #shopify-section-{{ section.id }} .fr-hero-process {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    #shopify-section-{{ section.id }} .fr-hero-footer {
