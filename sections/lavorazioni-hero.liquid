    }

    #shopify-section-{{ section.id }} .fr-hero-footer-title {
      font-size: 24px;
    }

    #shopify-section-{{ section.id }} .fr-hero-cta-button {
      padding: 16px 40px;
      font-size: 12px;
    }
  }

  /* Funzioni Base CSS */
  @media only screen and (min-width: 769px) {
    #shopify-section-{{ section.id }} {
