<!-- Sezione Hero Chi Siamo - Fabindia Roma -->
<section class="fr-about-hero">
  <div class="fr-hero-container" data-section-id="{{ section.id }}">
    
    <!-- Background parallax -->
    <div class="fr-parallax-bg">
      {% if section.settings.background_image != blank %}
        <img src="{{ section.settings.background_image | image_url: width: 2400 }}" 
             alt="{{ section.settings.background_image.alt | escape }}"
             loading="eager"
             class="fr-bg-image">
      {% endif %}
      <div class="fr-overlay" style="background: linear-gradient(135deg, {{ section.settings.overlay_color_1 }}{{ section.settings.overlay_opacity }}, {{ section.settings.overlay_color_2 }}{{ section.settings.overlay_opacity }});"></div>
    </div>

    <!-- Main content -->
    <div class="fr-content-wrapper">
      
      <!-- Intro section -->
      <div class="fr-intro-section">
        <span class="fr-subtitle">{{ section.settings.subtitle }}</span>
        <h1 class="fr-main-title">{{ section.settings.main_title }}</h1>
        <div class="fr-divider"></div>
      </div>

      <!-- Story cards -->
      <div class="fr-story-grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'story_card' %}
              <div class="fr-story-card" {{ block.shopify_attributes }}>
                <div class="fr-card-inner">
                  <div class="fr-card-icon">
                    {% if block.settings.icon != blank %}
                      {{ block.settings.icon }}
                    {% endif %}
                  </div>
                  <h3 class="fr-card-title">{{ block.settings.title }}</h3>
                  <p class="fr-card-text">{{ block.settings.text }}</p>
                </div>
              </div>
            {% when 'founder_card' %}
              <div class="fr-founder-card" {{ block.shopify_attributes }}>
                <div class="fr-founder-inner">
                  {% if block.settings.image != blank %}
                    <div class="fr-founder-image">
                      <img src="{{ block.settings.image | image_url: width: 600 }}" 
                           alt="{{ block.settings.name }}"
                           loading="lazy">
                    </div>
                  {% endif %}
                  <div class="fr-founder-content">
                    <h3 class="fr-founder-name">{{ block.settings.name }}</h3>
                    <span class="fr-founder-role">{{ block.settings.role }}</span>
                    <p class="fr-founder-quote">"{{ block.settings.quote }}"</p>
                  </div>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>

      <!-- Values section -->
      <div class="fr-values-section">
        <h2 class="fr-values-title">{{ section.settings.values_title }}</h2>
        <div class="fr-values-grid">
          <div class="fr-value-item" data-value="quality">
            <span class="fr-value-number">01</span>
            <h4>{{ section.settings.value_1_title }}</h4>
            <p>{{ section.settings.value_1_text }}</p>
          </div>
          <div class="fr-value-item" data-value="design">
            <span class="fr-value-number">02</span>
            <h4>{{ section.settings.value_2_title }}</h4>
            <p>{{ section.settings.value_2_text }}</p>
          </div>
          <div class="fr-value-item" data-value="tradition">
            <span class="fr-value-number">03</span>
            <h4>{{ section.settings.value_3_title }}</h4>
            <p>{{ section.settings.value_3_text }}</p>
          </div>
          <div class="fr-value-item" data-value="uniqueness">
            <span class="fr-value-number">04</span>
            <h4>{{ section.settings.value_4_title }}</h4>
            <p>{{ section.settings.value_4_text }}</p>
          </div>
        </div>
      </div>

      <!-- Timeline -->
      <div class="fr-timeline-section">
        <h2 class="fr-timeline-title">{{ section.settings.timeline_title }}</h2>
        <div class="fr-timeline">
          <div class="fr-timeline-line"></div>
          <div class="fr-timeline-item" data-year="1999">
            <div class="fr-timeline-dot"></div>
            <div class="fr-timeline-content">
              <span class="fr-timeline-year">1999</span>
              <p>{{ section.settings.milestone_1 }}</p>
            </div>
          </div>
          <div class="fr-timeline-item" data-year="2010">
            <div class="fr-timeline-dot"></div>
            <div class="fr-timeline-content">
              <span class="fr-timeline-year">2010</span>
              <p>{{ section.settings.milestone_2 }}</p>
            </div>
          </div>
          <div class="fr-timeline-item" data-year="2020">
            <div class="fr-timeline-dot"></div>
            <div class="fr-timeline-content">
              <span class="fr-timeline-year">2020</span>
              <p>{{ section.settings.milestone_3 }}</p>
            </div>
          </div>
          <div class="fr-timeline-item" data-year="oggi">
            <div class="fr-timeline-dot active"></div>
            <div class="fr-timeline-content">
              <span class="fr-timeline-year">Oggi</span>
              <p>{{ section.settings.milestone_4 }}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      {% if section.settings.show_cta %}
      <div class="fr-cta-section">
        <h3>{{ section.settings.cta_title }}</h3>
        <div class="fr-cta-buttons">
          {% if section.settings.cta_button_1_text != blank %}
            <a href="{{ section.settings.cta_button_1_link }}" class="btn btn--primary">
              {{ section.settings.cta_button_1_text }}
            </a>
          {% endif %}
          {% if section.settings.cta_button_2_text != blank %}
            <a href="{{ section.settings.cta_button_2_link }}" class="btn btn--secondary">
              {{ section.settings.cta_button_2_text }}
            </a>
          {% endif %}
        </div>
      </div>
      {% endif %}

    </div>
  </div>

