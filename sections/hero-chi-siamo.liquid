      display: flex;
      align-items: center;
      gap: 30px;
      padding: 30px;
    }

    #shopify-section-{{ section.id }} .fr-founder-image {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      overflow: hidden;
      flex-shrink: 0;
    }

    #shopify-section-{{ section.id }} .fr-founder-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    #shopify-section-{{ section.id }} .fr-founder-name {
      font-size: 22px;
      font-weight: 500;
      color: {{ section.settings.heading_color }};
      margin-bottom: 5px;
    }

    #shopify-section-{{ section.id }} .fr-founder-role {
      display: block;
      font-size: 14px;
      color: {{ section.settings.accent_color }};
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 15px;
    }

    #shopify-section-{{ section.id }} .fr-founder-quote {
      font-style: italic;
      font-size: 16px;
      line-height: 1.6;
      color: {{ section.settings.text_color }};
      opacity: 0.9;
    }

    /* Values section */
    #shopify-section-{{ section.id }} .fr-values-section {
      margin-bottom: 80px;
    }

    #shopify-section-{{ section.id }} .fr-values-title {
      text-align: center;
      font-size: 36px;
      font-weight: 300;
      color: {{ section.settings.heading_color }};
      margin-bottom: 50px;
    }

    #shopify-section-{{ section.id }} .fr-values-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 40px;
    }

    #shopify-section-{{ section.id }} .fr-value-item {
      text-align: center;
      opacity: 0;
      animation: fadeInUp 0.8s ease forwards;
    }

    #shopify-section-{{ section.id }} .fr-value-item:nth-child(1) { animation-delay: 0.1s; }
    #shopify-section-{{ section.id }} .fr-value-item:nth-child(2) { animation-delay: 0.2s; }
    #shopify-section-{{ section.id }} .fr-value-item:nth-child(3) { animation-delay: 0.3s; }
    #shopify-section-{{ section.id }} .fr-value-item:nth-child(4) { animation-delay: 0.4s; }

    #shopify-section-{{ section.id }} .fr-value-number {
      display: inline-block;
      font-size: 48px;
      font-weight: 200;
      color: {{ section.settings.accent_color }};
      opacity: 0.3;
      margin-bottom: 10px;
    }

    #shopify-section-{{ section.id }} .fr-value-item h4 {
      font-size: 20px;
      font-weight: 500;
      color: {{ section.settings.heading_color }};
      margin-bottom: 10px;
    }

    #shopify-section-{{ section.id }} .fr-value-item p {
      font-size: 15px;
      line-height: 1.6;
      color: {{ section.settings.text_color }};
      opacity: 0.8;
    }

    /* Timeline */
    #shopify-section-{{ section.id }} .fr-timeline-section {
      margin-bottom: 80px;
    }

    #shopify-section-{{ section.id }} .fr-timeline-title {
      text-align: center;
      font-size: 36px;
      font-weight: 300;
      color: {{ section.settings.heading_color }};
      margin-bottom: 60px;
    }

    #shopify-section-{{ section.id }} .fr-timeline {
      position: relative;
      max-width: 800px;
      margin: 0 auto;
    }

    #shopify-section-{{ section.id }} .fr-timeline-line {
      position: absolute;
      width: 2px;
      height: 100%;
      background: {{ section.settings.accent_color }}20;
      left: 50%;
      transform: translateX(-50%);
    }

    #shopify-section-{{ section.id }} .fr-timeline-item {
      position: relative;
      margin-bottom: 60px;
      opacity: 0;
      animation: fadeIn 1s ease forwards;
    }

    #shopify-section-{{ section.id }} .fr-timeline-item:nth-child(even) {
      text-align: right;
    }

    #shopify-section-{{ section.id }} .fr-timeline-item:nth-child(odd) .fr-timeline-content {
      padding-right: calc(50% + 40px);
    }

    #shopify-section-{{ section.id }} .fr-timeline-item:nth-child(even) .fr-timeline-content {
      padding-left: calc(50% + 40px);
    }

    #shopify-section-{{ section.id }} .fr-timeline-dot {
      position: absolute;
      width: 16px;
      height: 16px;
      background: {{ section.settings.background_color }};
      border: 3px solid {{ section.settings.accent_color }};
      border-radius: 50%;
      left: 50%;
      transform: translateX(-50%);
      top: 0;
      transition: all 0.3s ease;
    }

    #shopify-section-{{ section.id }} .fr-timeline-dot.active {
      background: {{ section.settings.accent_color }};
      box-shadow: 0 0 0 8px {{ section.settings.accent_color }}20;
    }

    #shopify-section-{{ section.id }} .fr-timeline-year {
      display: inline-block;
      font-size: 14px;
      font-weight: 600;
      letter-spacing: 2px;
      color: {{ section.settings.accent_color }};
      text-transform: uppercase;
      margin-bottom: 10px;
    }

    #shopify-section-{{ section.id }} .fr-timeline-content p {
      font-size: 16px;
      line-height: 1.6;
      color: {{ section.settings.text_color }};
    }

    /* CTA Section */
    #shopify-section-{{ section.id }} .fr-cta-section {
      text-align: center;
      padding: 60px 40px;
      background: {{ section.settings.cta_background }};
      border-radius: 16px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
    }

    #shopify-section-{{ section.id }} .fr-cta-section h3 {
      font-size: 32px;
      font-weight: 300;
      color: {{ section.settings.heading_color }};
      margin-bottom: 30px;
    }

    #shopify-section-{{ section.id }} .fr-cta-buttons {
      display: flex;
      gap: 20px;
      justify-content: center;
      flex-wrap: wrap;
    }

    /* Animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    /* Responsive */
    @media only screen and (max-width: 768px) {
      #shopify-section-{{ section.id }} .fr-content-wrapper {
        padding: 40px 15px;
      }

      #shopify-section-{{ section.id }} .fr-intro-section {
        margin-bottom: 50px;
      }

      #shopify-section-{{ section.id }} .fr-main-title {
        font-size: 2rem;
      }

      #shopify-section-{{ section.id }} .fr-story-grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }

      #shopify-section-{{ section.id }} .fr-founder-inner {
        flex-direction: column;
        text-align: center;
      }

      #shopify-section-{{ section.id }} .fr-values-grid {
        grid-template-columns: 1fr;
        gap: 30px;
      }

      #shopify-section-{{ section.id }} .fr-timeline-line {
        left: 20px;
      }

      #shopify-section-{{ section.id }} .fr-timeline-item {
        text-align: left !important;
      }

      #shopify-section-{{ section.id }} .fr-timeline-item .fr-timeline-content {
        padding-left: 60px !important;
        padding-right: 0 !important;
      }

      #shopify-section-{{ section.id }} .fr-timeline-dot {
        left: 20px;
      }

      #shopify-section-{{ section.id }} .fr-cta-section {
        padding: 40px 20px;
      }

      #shopify-section-{{ section.id }} .fr-cta-buttons {
        flex-direction: column;
        align-items: center;
      }

      #shopify-section-{{ section.id }} .fr-cta-buttons .btn {
        width: 100%;
        max-width: 280px;
      }
    }

    /* Funzioni base - Padding e Margin */
    @media only screen and (min-width: 769px) {
      #shopify-section-{{ section.id }} {
        max-width: {{ section.settings.max_dimensione }};
        margin: 0 auto;
        padding-top: {{ section.settings.padding_top_desktop }}px;
        padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
        margin-top: {{ section.settings.margin_top_desktop }}px;
        margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
      }

      {% if section.settings.nascondi_desktop %}
        #shopify-section-{{ section.id }} {
          display: none;
        }
      {% endif %}
    }

    @media only screen and (max-width: 768px) {
      #shopify-section-{{ section.id }} {
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
        margin-top: {{ section.settings.margin_top_mobile }}px;
        margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
      }

      {% if section.settings.nascondi_mobile %}
        #shopify-section-{{ section.id }} {
          display: none;
        }
      {% endif %}
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const section = document.querySelector('#shopify-section-{{ section.id }}');
      
      // Parallax effect
      const parallaxBg = section.querySelector('.fr-bg-image');
      if (parallaxBg) {
        window.addEventListener('scroll', () => {
          const scrolled = window.pageYOffset;
          const rate = scrolled * -0.5;
          parallaxBg.style.transform = `translateY(${rate}px) scale(1.1)`;
        });
      }

      // Timeline animation on scroll
      const timelineItems = section.querySelectorAll('.fr-timeline-item');
      const observerOptions = {
        threshold: 0.5,
        rootMargin: '0px 0px -100px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            const dot = entry.target.querySelector('.fr-timeline-dot');
            if (dot) {
              setTimeout(() => {
                dot.classList.add('active');
              }, 300);
            }
          }
        });
      }, observerOptions);

      timelineItems.forEach(item => {
        observer.observe(item);
      });

      // Value items animation
      const valueItems = section.querySelectorAll('.fr-value-item');
      valueItems.forEach(item => {
        observer.observe(item);
      });
    });
  </script>
</section>

