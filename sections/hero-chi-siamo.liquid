    }

    #shopify-section-{{ section.id }} .fr-card-icon {
      font-size: 48px;
      color: {{ section.settings.accent_color }};
      margin-bottom: 20px;
    }

    #shopify-section-{{ section.id }} .fr-card-title {
      font-size: 24px;
      font-weight: 400;
      color: {{ section.settings.heading_color }};
      margin-bottom: 15px;
    }

    #shopify-section-{{ section.id }} .fr-card-text {
      font-size: 16px;
      line-height: 1.6;
      color: {{ section.settings.text_color }};
      opacity: 0.9;
    }

    /* Founder cards */
    #shopify-section-{{ section.id }} .fr-founder-card {
      background: {{ section.settings.card_background }};
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
      transition: all 0.3s ease;
    }

