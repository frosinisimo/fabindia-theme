      if (!section) return;

      const navButtons = section.querySelectorAll('.fab-nav-btn');
      const blocks = section.querySelectorAll('.fab-block');
      
      // Check display modes
      const isMobile = window.innerWidth <= 767;
      const showTabsDesktop = {{ show_tabs_desktop | json }};
      const showTabsMobile = {{ show_tabs_mobile | json }};
      const shouldUseTabs = isMobile ? showTabsMobile : showTabsDesktop;
      
      // Se non usiamo tabs, esci
      if (!shouldUseTabs || navButtons.length === 0) {
        console.log('Fabindia Details: Modalit√† stack attiva');
        return;
      }
      
      console.log('Fabindia Details: Modalit√† tabs attiva');

      // Funzione per mostrare una tab
      function showTab(index) {
        navButtons.forEach(btn => btn.classList.remove('active'));
        blocks.forEach(block => block.classList.remove('active'));
        
        if (navButtons[index]) navButtons[index].classList.add('active');
        if (blocks[index]) blocks[index].classList.add('active');
        
        console.log('Tab attiva:', index);
      }

      // Click handler
      navButtons.forEach((btn, index) => {
        btn.addEventListener('click', function() {
          showTab(index);
        });
      });

      // Inizializza
      showTab(0);
    })();
  </script>
