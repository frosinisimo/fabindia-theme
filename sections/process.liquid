</style>

<section class="fabindia-process">
  <div class="fabindia-process__container">
    {%- if section.settings.show_intro -%}
      <div class="fabindia-process__intro">
        {%- if section.settings.overline != blank -%}
          <span class="fabindia-process__overline">{{ section.settings.overline }}</span>
        {%- endif -%}
        {%- if section.settings.title != blank -%}
          <h2 class="fabindia-process__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="fabindia-process__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="fabindia-process__timeline" data-timeline>
      {%- if section.settings.show_timeline_line -%}
        <div class="fabindia-process__timeline-line">
          <div class="fabindia-process__timeline-progress"></div>
        </div>
      {%- endif -%}
      
      <div class="fabindia-process__steps">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'process_step' -%}
              <div class="fabindia-process__step" {{ block.shopify_attributes }}>
                {%- if section.settings.show_timeline_dots -%}
                  <div class="fabindia-process__step-dot"></div>
                {%- endif -%}
                {%- if block.settings.show_step_number -%}
                  <div class="fabindia-process__step-number" style="background-color: {{ block.settings.number_background_color }}; color: {{ block.settings.number_text_color }};">{{ forloop.index }}</div>
                {%- endif -%}
                
                <div class="fabindia-process__step-content" style="background-color: {{ block.settings.block_background_color }};">
                  {%- if block.settings.image != blank -%}
                    <img 
                      src="{{ block.settings.image | image_url: width: 600 }}"
                      alt="{{ block.settings.title | escape }}"
                      class="fabindia-process__step-image"
                      loading="lazy"
                    >
                  {%- endif -%}
                  
                  <div class="fabindia-process__step-flag">
                    {%- if block.settings.country == 'italy' -%}
                      <span class="fabindia-process__flag fabindia-process__flag--italy"></span>
                    {%- elsif block.settings.country == 'india' -%}
                      <span class="fabindia-process__flag fabindia-process__flag--india"></span>
                    {%- endif -%}
                    <span class="fabindia-process__location" style="color: {{ block.settings.location_color }};">{{ block.settings.location }}</span>
                  </div>
                  
                  <h3 class="fabindia-process__step-title" style="color: {{ block.settings.block_title_color }};">{{ block.settings.title }}</h3>
                  <p class="fabindia-process__step-description" style="color: {{ block.settings.block_text_color }};">{{ block.settings.description }}</p>
                  
                  <div class="fabindia-process__features">
                    {%- if block.settings.feature_1 != blank -%}
                      <div class="fabindia-process__feature">
                        <div class="fabindia-process__feature-icon" style="background-color: {{ block.settings.feature_icon_background }};">
                          <svg fill="none" viewBox="0 0 24 24">
                            <path d="M5 13l4 4L19 7" stroke="{{ block.settings.feature_icon_color }}" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </div>
                        <span style="color: {{ block.settings.block_text_color }};">{{ block.settings.feature_1 }}</span>
                      </div>
                    {%- endif -%}
                    {%- if block.settings.feature_2 != blank -%}
                      <div class="fabindia-process__feature">
                        <div class="fabindia-process__feature-icon" style="background-color: {{ block.settings.feature_icon_background }};">
                          <svg fill="none" viewBox="0 0 24 24">
                            <path d="M5 13l4 4L19 7" stroke="{{ block.settings.feature_icon_color }}" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </div>
                        <span style="color: {{ block.settings.block_text_color }};">{{ block.settings.feature_2 }}</span>
                      </div>
                    {%- endif -%}
                    {%- if block.settings.feature_3 != blank -%}
                      <div class="fabindia-process__feature">
                        <div class="fabindia-process__feature-icon" style="background-color: {{ block.settings.feature_icon_background }};">
                          <svg fill="none" viewBox="0 0 24 24">
                            <path d="M5 13l4 4L19 7" stroke="{{ block.settings.feature_icon_color }}" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </div>
                        <span style="color: {{ block.settings.block_text_color }};">{{ block.settings.feature_3 }}</span>
                      </div>
                    {%- endif -%}
                  </div>
                  
                  {%- if block.settings.cta_text != blank -%}
                    <div class="fabindia-process__cta">
                      <a href="{{ block.settings.cta_link }}" class="btn btn--{{ block.settings.cta_style }}">
                        {{ block.settings.cta_text }}
                      </a>
                    </div>
                  {%- endif -%}
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>

    {%- if section.settings.show_why -%}
      <div class="fabindia-process__why">
        <h3 class="fabindia-process__why-title">{{ section.settings.why_title }}</h3>
        <p class="fabindia-process__why-text">{{ section.settings.why_text }}</p>
      </div>
    {%- endif -%}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const timeline = document.querySelector('[data-timeline]');
    if (!timeline) return;
    
    const observerOptions = {
      threshold: 0.3,
      rootMargin: '0px 0px -100px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('in-view');
        }
      });
    }, observerOptions);
    
    observer.observe(timeline);
  });
</script>

