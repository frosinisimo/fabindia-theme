    padding: 0 20px;
  }

  .fabindia-process__intro {
    text-align: center;
    margin-bottom: 40px;
  }

  .fabindia-process__overline {
    color: {{ section.settings.overline_color }};
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 12px;
    display: block;
  }

  .fabindia-process__title {
    color: {{ section.settings.title_color }};
    font-size: 36px;
    font-weight: 400;
    line-height: 1.15;
    margin-bottom: 16px;
    font-family: var(--typeHeaderPrimary), var(--typeHeaderFallback);
  }

  .fabindia-process__description {
    color: {{ section.settings.text_color }};
    font-size: 17px;
    line-height: 1.5;
    max-width: 650px;
    margin: 0 auto;
    opacity: 0.9;
  }

  .fabindia-process__timeline {
    position: relative;
    padding: 40px 0;
  }

  .fabindia-process__timeline-line {
    position: absolute;
    width: 100%;
    height: 2px;
    background: {{ section.settings.timeline_line_color }};
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    z-index: 0;
  }

  .fabindia-process__timeline-progress {
    position: absolute;
    height: 100%;
    background: {{ section.settings.timeline_progress_color }};
    top: 0;
    left: 0;
    width: 0;
    transition: width 1.5s ease-out;
  }

  .fabindia-process__timeline.in-view .fabindia-process__timeline-progress {
    width: 100%;
  }

  .fabindia-process__steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
    position: relative;
    z-index: 1;
  }

  .fabindia-process__step {
    position: relative;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s ease-out;
  }

  .fabindia-process__timeline.in-view .fabindia-process__step {
    opacity: 1;
    transform: translateY(0);
  }

  .fabindia-process__step:nth-child(1) { transition-delay: 0.2s; }
  .fabindia-process__step:nth-child(2) { transition-delay: 0.4s; }
  .fabindia-process__step:nth-child(3) { transition-delay: 0.6s; }

  .fabindia-process__step-dot {
    position: absolute;
    width: 20px;
    height: 20px;
    background: {{ section.settings.section_background_color }};
    border: 3px solid {{ section.settings.timeline_line_color }};
    border-radius: 50%;
    top: -44px;
    left: 50%;
    transform: translateX(-50%);
    transition: all 0.4s ease;
    z-index: 2;
  }

  .fabindia-process__timeline.in-view .fabindia-process__step-dot {
    background: {{ section.settings.timeline_progress_color }};
    border-color: {{ section.settings.timeline_progress_color }};
  }

  .fabindia-process__step-content {
    padding: 30px;
    background: #FEFEFE;
    border-radius: 12px;
    box-shadow: 0 2px 16px rgba(0,0,0,0.06);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    position: relative;
  }

  .fabindia-process__step-content:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 24px rgba(0,0,0,0.1);
  }

  .fabindia-process__step-image {
    width: calc(100% + 60px);
    height: 200px;
    margin: -30px -30px 20px -30px;
    object-fit: cover;
    border-radius: 12px 12px 0 0;
  }

  .fabindia-process__step-flag {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
  }

  .fabindia-process__flag {
    width: 28px;
    height: 20px;
    border-radius: 3px;
    display: inline-block;
  }

