    font-size: 24px;
    font-weight: 600;
    margin-bottom: 12px;
    font-family: var(--typeHeaderPrimary), var(--typeHeaderFallback);
  }

  .fabindia-process__step-description {
    font-size: 15px;
    line-height: 1.5;
    margin-bottom: 20px;
    opacity: 0.85;
    flex-grow: 1;
  }

  .fabindia-process__features {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 20px;
  }

