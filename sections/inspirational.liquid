{%- comment -%}
================================================================
FABINDIA ROMA - HERO INSPIRATIONAL COLLAGE SECTION
================================================================
{%- endcomment -%}

<style>
  {%- comment -%} Desktop Styles (769px e oltre) {%- endcomment -%}
  @media only screen and (min-width: 769px) {
    #shopify-section-{{ section.id }} {
      {%- unless section.settings.max_width == 'default' -%}
        {%- if section.settings.max_width == '100%' -%}
          max-width: none;
        {%- else -%}
          max-width: {{ section.settings.max_width }};
        {%- endif -%}
        margin-left: auto;
        margin-right: auto;
      {%- endunless -%}
      
      {%- if section.settings.padding_top_desktop > 0 or section.settings.padding_bottom_desktop > 0 -%}
        padding-top: {{ section.settings.padding_top_desktop }}px;
        padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
      {%- endif -%}
      
      {%- if section.settings.margin_top_desktop != 0 or section.settings.margin_bottom_desktop != 0 -%}
        margin-top: {{ section.settings.margin_top_desktop }}px;
        margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
      {%- endif -%}
      
      {%- if section.settings.hide_on_desktop -%}
        display: none !important;
      {%- endif -%}
    }
  }

  {%- comment -%} Mobile Styles (fino a 768px) {%- endcomment -%}
  @media only screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} {
      {%- if section.settings.padding_top_mobile > 0 or section.settings.padding_bottom_mobile > 0 -%}
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      {%- endif -%}
      
      {%- if section.settings.margin_top_mobile != 0 or section.settings.margin_bottom_mobile != 0 -%}
        margin-top: {{ section.settings.margin_top_mobile }}px;
        margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
      {%- endif -%}
      
      {%- if section.settings.hide_on_mobile -%}
        display: none !important;
      {%- endif -%}
    }
  }

  {%- comment -%} Animazioni opzionali per transizioni fluide {%- endcomment -%}
  {%- if section.settings.enable_smooth_transitions -%}
    #shopify-section-{{ section.id }} {
      transition: all 0.3s ease;
    }
  {%- endif -%}

  /* Stili custom della sezione */
  .fabindia-inspirational {
    background-color: {{ section.settings.section_bg_color }};
    position: relative;
    overflow: hidden;
  }

  .fabindia-inspirational__container {
    position: relative;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
  }

  .fabindia-inspirational__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    position: relative;
  }

  @media only screen and (min-width: 769px) {
    .fabindia-inspirational__grid {
      grid-template-columns: repeat(12, 1fr);
      gap: 24px;
    }
  }

  .fabindia-inspirational__item {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    background-color: {{ section.settings.block_bg_color }};
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    cursor: pointer;
  }

  /* Dimensioni personalizzate per blocco */
  {%- for block in section.blocks -%}
    #block-{{ block.id }} {
      {%- if block.settings.desktop_columns -%}
        @media only screen and (min-width: 769px) {
          grid-column: span {{ block.settings.desktop_columns }};
        }
      {%- endif -%}
      
      {%- if block.settings.desktop_rows -%}
        @media only screen and (min-width: 769px) {
          grid-row: span {{ block.settings.desktop_rows }};
        }
      {%- endif -%}
      
      {%- if block.settings.mobile_columns -%}
        @media only screen and (max-width: 768px) {
          grid-column: span {{ block.settings.mobile_columns }};
        }
      {%- endif -%}
      
      {%- if block.settings.custom_height -%}
        height: {{ block.settings.custom_height }}px;
      {%- else -%}
        min-height: 300px;
      {%- endif -%}
      
      {%- if block.settings.enable_overlap -%}
        z-index: {{ forloop.index }};
        {%- if block.settings.overlap_direction == 'left' -%}
          margin-left: -{{ block.settings.overlap_amount }}px;
        {%- elsif block.settings.overlap_direction == 'right' -%}
          margin-right: -{{ block.settings.overlap_amount }}px;
        {%- elsif block.settings.overlap_direction == 'top' -%}
          margin-top: -{{ block.settings.overlap_amount }}px;
        {%- elsif block.settings.overlap_direction == 'bottom' -%}
          margin-bottom: -{{ block.settings.overlap_amount }}px;
        {%- endif -%}
      {%- endif -%}
    }
  {%- endfor -%}

  .fabindia-inspirational__image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .fabindia-inspirational__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease-out;
  }

  /* Animazioni hover desktop */
  @media only screen and (min-width: 769px) {
    .fabindia-inspirational__item:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .fabindia-inspirational__item:hover .fabindia-inspirational__image {
      transform: scale(1.1);
    }

    .fabindia-inspirational__item--zoom:hover .fabindia-inspirational__image {
      transform: scale(1.2);
    }

    .fabindia-inspirational__item--rotate:hover .fabindia-inspirational__image {
      transform: scale(1.1) rotate(2deg);
    }

    .fabindia-inspirational__item--slide:hover .fabindia-inspirational__image {
      transform: translateX(10px);
    }

    .fabindia-inspirational__item--fade:hover .fabindia-inspirational__image {
      opacity: 0.8;
    }
  }

  /* Overlay e contenuto */
  .fabindia-inspirational__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, 0.7) 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 20px;
  }

  .fabindia-inspirational__item:hover .fabindia-inspirational__overlay {
    opacity: 1;
  }

  .fabindia-inspirational__content {
    color: #FEFEFE;
    transform: translateY(20px);
    transition: transform 0.4s ease;
  }

  .fabindia-inspirational__item:hover .fabindia-inspirational__content {
    transform: translateY(0);
  }

  .fabindia-inspirational__title {
    font-size: 1.2em;
    font-weight: 600;
    margin-bottom: 8px;
    color: {{ section.settings.overlay_text_color }};
  }

  .fabindia-inspirational__description {
    font-size: 0.9em;
    line-height: 1.4;
    margin-bottom: 12px;
    color: {{ section.settings.overlay_text_color }};
    opacity: 0.9;
  }

  .fabindia-inspirational__cta {
    display: inline-block;
    padding: 8px 20px;
    background-color: {{ section.settings.cta_bg_color }};
    color: {{ section.settings.cta_text_color }};
    text-decoration: none;
    border-radius: {{ section.settings.cta_border_radius }}px;
    font-size: 0.85em;
    font-weight: {{ section.settings.cta_font_weight }};
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
    text-transform: uppercase;
  }

  .fabindia-inspirational__cta:hover {
    background-color: {{ section.settings.cta_hover_bg_color }};
    transform: translateX(5px);
  }

  /* Animazioni scroll mobile */
  @media only screen and (max-width: 768px) {
    .fabindia-inspirational__item {
      opacity: 0;
      transform: translateY(30px);
    }

    .fabindia-inspirational__item.is-visible {
      opacity: 1;
      transform: translateY(0);
      transition: all 0.6s ease-out;
    }

    .fabindia-inspirational__overlay {
      opacity: 1;
      background: linear-gradient(to bottom, transparent 50%, rgba(0, 0, 0, 0.8) 100%);
    }

    .fabindia-inspirational__content {
      transform: translateY(0);
    }

    /* Testo mobile diverso */
    .fabindia-inspirational__description--desktop {
      display: none;
    }

    .fabindia-inspirational__description--mobile {
      display: block;
    }
  }

  @media only screen and (min-width: 769px) {
    .fabindia-inspirational__description--mobile {
      display: none;
    }

    .fabindia-inspirational__description--desktop {
      display: block;
    }
  }

  /* Stili per prodotti e collezioni */
  .fabindia-inspirational__product-info {
    position: absolute;
    top: 16px;
    right: 16px;
    background: rgba(255, 255, 255, 0.95);
    padding: 8px 12px;
    border-radius: 20px;
    font-size: 0.8em;
    font-weight: 500;
    color: {{ section.settings.product_price_color }};
  }

  /* Animazioni personalizzate */
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  @keyframes slide-in {
    from { transform: translateX(-100%); opacity: 0; }
    to { transform: translateX(0); opacity: 1; }
  }

  .fabindia-inspirational__item--float {
    animation: float 4s ease-in-out infinite;
  }

  .fabindia-inspirational__item--pulse {
    animation: pulse 3s ease-in-out infinite;
  }
</style>

<section class="fabindia-inspirational" data-section-id="{{ section.id }}">
  <div class="fabindia-inspirational__container">
    {%- if section.settings.title != blank -%}
      <h2 class="fabindia-inspirational__heading" style="color: {{ section.settings.title_color }}; text-align: center; margin-bottom: 40px;">
        {{ section.settings.title }}
      </h2>
    {%- endif -%}

    <div class="fabindia-inspirational__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'image' -%}
            <div id="block-{{ block.id }}" 
                 class="fabindia-inspirational__item fabindia-inspirational__item--{{ block.settings.animation_type }}"
                 {{ block.shopify_attributes }}>
              {%- if block.settings.link != blank -%}
                <a href="{{ block.settings.link }}" class="fabindia-inspirational__link">
              {%- endif -%}
                <div class="fabindia-inspirational__image-wrapper">
                  {%- if block.settings.image != blank -%}
                    <img class="fabindia-inspirational__image lazyload"
                         src="{{ block.settings.image | img_url: '300x300' }}"
                         data-src="{{ block.settings.image | img_url: '1200x1200' }}"
                         alt="{{ block.settings.image.alt | escape }}">
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'fabindia-inspirational__image' }}
                  {%- endif -%}
                </div>
                {%- if block.settings.show_overlay -%}
                  <div class="fabindia-inspirational__overlay">
                    <div class="fabindia-inspirational__content">
                      {%- if block.settings.title != blank -%}
                        <h3 class="fabindia-inspirational__title">{{ block.settings.title }}</h3>
                      {%- endif -%}
                      {%- if block.settings.description != blank -%}
                        <p class="fabindia-inspirational__description fabindia-inspirational__description--desktop">
                          {{ block.settings.description }}
                        </p>
                      {%- endif -%}
                      {%- if block.settings.description_mobile != blank -%}
                        <p class="fabindia-inspirational__description fabindia-inspirational__description--mobile">
                          {{ block.settings.description_mobile }}
                        </p>
                      {%- elsif block.settings.description != blank -%}
                        <p class="fabindia-inspirational__description fabindia-inspirational__description--mobile">
                          {{ block.settings.description }}
                        </p>
                      {%- endif -%}
                      {%- if block.settings.cta_text != blank -%}
                        <span class="fabindia-inspirational__cta">{{ block.settings.cta_text }}</span>
                      {%- endif -%}
                    </div>
                  </div>
                {%- endif -%}
              {%- if block.settings.link != blank -%}
                </a>
              {%- endif -%}
            </div>

          {%- when 'product' -%}
            {%- assign product = all_products[block.settings.product] -%}
            {%- if product != blank -%}
              <div id="block-{{ block.id }}" 
                   class="fabindia-inspirational__item fabindia-inspirational__item--{{ block.settings.animation_type }}"
                   {{ block.shopify_attributes }}>
                <a href="{{ product.url }}" class="fabindia-inspirational__link">
                  <div class="fabindia-inspirational__image-wrapper">
                    {%- if block.settings.custom_image != blank -%}
                      <img class="fabindia-inspirational__image lazyload"
                           src="{{ block.settings.custom_image | img_url: '300x300' }}"
                           data-src="{{ block.settings.custom_image | img_url: '1200x1200' }}"
                           alt="{{ block.settings.custom_image.alt | escape }}">
                    {%- elsif product.featured_image != blank -%}
                      <img class="fabindia-inspirational__image lazyload"
                           src="{{ product.featured_image | img_url: '300x300' }}"
                           data-src="{{ product.featured_image | img_url: '1200x1200' }}"
                           alt="{{ product.featured_image.alt | escape }}">
                    {%- else -%}
                      {{ 'product-1' | placeholder_svg_tag: 'fabindia-inspirational__image' }}
                    {%- endif -%}
                  </div>
                  {%- if block.settings.show_overlay -%}
                    <div class="fabindia-inspirational__product-info">
                      {{ product.price | money }}
                    </div>
                    <div class="fabindia-inspirational__overlay">
                      <div class="fabindia-inspirational__content">
                        <h3 class="fabindia-inspirational__title">{{ product.title }}</h3>
                        {%- if block.settings.description != blank -%}
                          <p class="fabindia-inspirational__description fabindia-inspirational__description--desktop">
                            {{ block.settings.description }}
                          </p>
                        {%- endif -%}
                        {%- if block.settings.description_mobile != blank -%}
                          <p class="fabindia-inspirational__description fabindia-inspirational__description--mobile">
                            {{ block.settings.description_mobile }}
                          </p>
                        {%- elsif block.settings.description != blank -%}
                          <p class="fabindia-inspirational__description fabindia-inspirational__description--mobile">
                            {{ block.settings.description }}
                          </p>
                        {%- endif -%}
                        <span class="fabindia-inspirational__cta">{{ block.settings.cta_text | default: 'Scopri' }}</span>
                      </div>
                    </div>
                  {%- endif -%}
                </a>
              </div>
            {%- endif -%}

          {%- when 'collection' -%}
            {%- assign collection = collections[block.settings.collection] -%}
            {%- if collection != blank -%}
              <div id="block-{{ block.id }}" 
                   class="fabindia-inspirational__item fabindia-inspirational__item--{{ block.settings.animation_type }}"
                   {{ block.shopify_attributes }}>
                <a href="{{ collection.url }}" class="fabindia-inspirational__link">
                  <div class="fabindia-inspirational__image-wrapper">
                    {%- if block.settings.custom_image != blank -%}
                      <img class="fabindia-inspirational__image lazyload"
                           src="{{ block.settings.custom_image | img_url: '300x300' }}"
                           data-src="{{ block.settings.custom_image | img_url: '1200x1200' }}"
                           alt="{{ block.settings.custom_image.alt | escape }}">
                    {%- elsif collection.image != blank -%}
                      <img class="fabindia-inspirational__image lazyload"
                           src="{{ collection.image | img_url: '300x300' }}"
                           data-src="{{ collection.image | img_url: '1200x1200' }}"
                           alt="{{ collection.image.alt | escape }}">
                    {%- else -%}
                      {{ 'collection-1' | placeholder_svg_tag: 'fabindia-inspirational__image' }}
                    {%- endif -%}
                  </div>
                  {%- if block.settings.show_overlay -%}
                    <div class="fabindia-inspirational__overlay">
                      <div class="fabindia-inspirational__content">
                        <h3 class="fabindia-inspirational__title">{{ collection.title }}</h3>
                        {%- if block.settings.description != blank -%}
                          <p class="fabindia-inspirational__description fabindia-inspirational__description--desktop">
                            {{ block.settings.description }}
                          </p>
                        {%- endif -%}
                        {%- if block.settings.description_mobile != blank -%}
                          <p class="fabindia-inspirational__description fabindia-inspirational__description--mobile">
                            {{ block.settings.description_mobile }}
                          </p>
                        {%- elsif block.settings.description != blank -%}
                          <p class="fabindia-inspirational__description fabindia-inspirational__description--mobile">
                            {{ block.settings.description }}
                          </p>
                        {%- endif -%}
                        <span class="fabindia-inspirational__cta">{{ block.settings.cta_text | default: 'Esplora' }}</span>
                      </div>
                    </div>
                  {%- endif -%}
                </a>
              </div>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.querySelector('[data-section-id="{{ section.id }}"]');
  const items = section.querySelectorAll('.fabindia-inspirational__item');
  
  // Animazione scroll mobile
  if (window.innerWidth <= 768) {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry, index) {
        if (entry.isIntersecting) {
          setTimeout(function() {
            entry.target.classList.add('is-visible');
          }, index * 100);
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);
    
    items.forEach(function(item) {
      observer.observe(item);
    });
    
    // Touch interactions
    let touchStartY = 0;
    let touchEndY = 0;
    
    section.addEventListener('touchstart', function(e) {
      touchStartY = e.changedTouches[0].screenY;
    });
    
    section.addEventListener('touchend', function(e) {
      touchEndY = e.changedTouches[0].screenY;
      handleSwipe();
    });
    
    function handleSwipe() {
      if (touchEndY < touchStartY - 50) {
        // Swipe up - add subtle animation
        items.forEach(function(item, index) {
          if (item.classList.contains('is-visible')) {
            item.style.transform = 'translateY(-5px)';
            setTimeout(function() {
              item.style.transform = 'translateY(0)';
            }, 300);
          }
        });
      }
    }
  }
  
  // Lazy loading
  if ('IntersectionObserver' in window) {
    const imageObserver = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          const img = entry.target;
          img.src = img.dataset.src;
          img.classList.remove('lazyload');
          imageObserver.unobserve(img);
        }
      });
    });
    
    const lazyImages = section.querySelectorAll('.lazyload');
    lazyImages.forEach(function(img) {
      imageObserver.observe(img);
    });
  }
});
</script>

