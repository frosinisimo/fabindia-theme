<style>
  {%- comment -%} Variabili CSS Globali {%- endcomment -%}
  #shopify-section-{{ section.id }} {
    --fr-gap: {{ section.settings.grid_gap }}px;
    --fr-border-radius: {{ section.settings.border_radius }}px;
    --fr-transition: all {{ section.settings.animation_speed }}ms cubic-bezier(0.4, 0, 0.2, 1);
    --fr-section-bg: {{ section.settings.section_bg_color }};
    {%- case section.settings.overlay_gradient_type -%}
      {%- when 'bottom-dark' -%}
        --fr-overlay-gradient: to bottom, transparent 0%, rgba(0, 0, 0, 0.7) 100%;
      {%- when 'top-dark' -%}
        --fr-overlay-gradient: to top, transparent 0%, rgba(0, 0, 0, 0.7) 100%;
      {%- when 'full-gradient' -%}
        --fr-overlay-gradient: to bottom, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.8) 100%;
      {%- when 'half-transparent' -%}
        --fr-overlay-gradient: to bottom, transparent 50%, rgba(0, 0, 0, 0.9) 100%;
      {%- when 'radial' -%}
        --fr-overlay-gradient: ellipse at center, transparent 0%, rgba(0, 0, 0, 0.7) 100%;
      {%- else -%}
        --fr-overlay-gradient: to bottom, transparent 0%, rgba(0, 0, 0, 0.7) 100%;
    {%- endcase -%}
  }

  {%- comment -%} Layout Responsive Base {%- endcomment -%}
  @media only screen and (min-width: 769px) {
    #shopify-section-{{ section.id }} {
      max-width: {{ section.settings.max_dimensione }};
      margin: 0 auto;
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
      margin-top: {{ section.settings.margin_top_desktop }}px;
      margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
    }
    
    {% if section.settings.nascondi_desktop %}
      #shopify-section-{{ section.id }} {
        display: none;
      }
    {% endif %}
  }

  @media only screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      margin-top: {{ section.settings.margin_top_mobile }}px;
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
    }
    
    {% if section.settings.nascondi_mobile %}
      #shopify-section-{{ section.id }} {
        display: none;
      }
    {% endif %}
  }

  {%- comment -%} Struttura Base Sezione {%- endcomment -%}
  #shopify-section-{{ section.id }} .fr-inspirational {
    background: var(--fr-section-bg);
    position: relative;
    overflow: {% if section.settings.overflow_visible %}visible{% else %}hidden{% endif %};
  }

  #shopify-section-{{ section.id }} .fr-inspirational__wrapper {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 20px;
  }

  #shopify-section-{{ section.id }} .fr-inspirational__header {
    text-align: center;
    margin-bottom: {{ section.settings.title_spacing }}px;
  }

  #shopify-section-{{ section.id }} .fr-inspirational__title {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    letter-spacing: {{ section.settings.title_letter_spacing | divided_by: 100.0 }}em;
    margin: 0;
    text-transform: {{ section.settings.title_transform }};
  }

  #shopify-section-{{ section.id }} .fr-inspirational__subtitle {
    color: {{ section.settings.subtitle_color }};
    font-size: {{ section.settings.subtitle_size }}px;
    margin-top: 12px;
    opacity: 0.9;
  }

  {%- comment -%} Sistema Grid Avanzato {%- endcomment -%}
  #shopify-section-{{ section.id }} .fr-inspirational__grid {
    display: grid;
    gap: var(--fr-gap);
    position: relative;
  }

  {%- comment -%} Layout Desktop Grid {%- endcomment -%}
  @media only screen and (min-width: 769px) {
    #shopify-section-{{ section.id }} .fr-inspirational__grid {
      grid-template-columns: repeat({{ section.settings.desktop_columns }}, 1fr);
      grid-auto-rows: {{ section.settings.base_height }}px;
    }

    {%- comment -%} Stili di Layout Globali {%- endcomment -%}
    {%- case section.settings.layout_style -%}
      {%- when 'masonry' -%}
        #shopify-section-{{ section.id }} .fr-inspirational__grid {
          grid-auto-flow: dense;
        }
      
      {%- when 'overlap' -%}
        #shopify-section-{{ section.id }} .fr-inspirational__item:nth-child(even) {
          margin-top: {{ section.settings.overlap_offset }}px;
          z-index: 2;
        }
        #shopify-section-{{ section.id }} .fr-inspirational__item:nth-child(odd) {
          z-index: 1;
        }
        
      {%- when 'cascade' -%}
        {%- for i in (1..12) -%}
          #shopify-section-{{ section.id }} .fr-inspirational__item:nth-child({{ i }}) {
            transform: translateY({{ i | times: 20 }}px);
            z-index: {{ 13 | minus: i }};
          }
        {%- endfor -%}
        
      {%- when 'scattered' -%}
        #shopify-section-{{ section.id }} .fr-inspirational__item:nth-child(3n+1) {
          transform: rotate(-{{ section.settings.scatter_rotation }}deg);
        }
        #shopify-section-{{ section.id }} .fr-inspirational__item:nth-child(3n+2) {
          transform: rotate({{ section.settings.scatter_rotation }}deg);
        }
        #shopify-section-{{ section.id }} .fr-inspirational__item:nth-child(4n) {
          margin-top: {{ section.settings.scatter_offset }}px;
        }
    {%- endcase -%}
  }

  {%- comment -%} Layout Mobile Grid {%- endcomment -%}
  @media only screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .fr-inspirational__grid {
      grid-template-columns: repeat({{ section.settings.mobile_columns }}, 1fr);
      grid-auto-rows: {{ section.settings.mobile_base_height }}px;
    }
  }

  {%- comment -%} Stili Item del Grid {%- endcomment -%}
  #shopify-section-{{ section.id }} .fr-inspirational__item {
    position: relative;
    border-radius: var(--fr-border-radius);
    overflow: hidden;
    transition: var(--fr-transition);
    background: {{ section.settings.item_bg_color }};
    cursor: pointer;
  }

  {%- comment -%} Dimensioni Custom per Blocco {%- endcomment -%}
  {%- for block in section.blocks -%}
    @media only screen and (min-width: 769px) {
      #shopify-section-{{ section.id }} #block-{{ block.id }} {
        grid-column: span {{ block.settings.desktop_span_x | default: 1 }};
        grid-row: span {{ block.settings.desktop_span_y | default: 1 }};
        {%- if block.settings.custom_position -%}
          grid-column-start: {{ block.settings.grid_column_start }};
          grid-row-start: {{ block.settings.grid_row_start }};
        {%- endif -%}
      }
    }
    
    @media only screen and (max-width: 768px) {
      #shopify-section-{{ section.id }} #block-{{ block.id }} {
        grid-column: span {{ block.settings.mobile_span_x | default: 1 }};
        grid-row: span {{ block.settings.mobile_span_y | default: 1 }};
      }
    }
  {%- endfor -%}

  {%- comment -%} Contenitore Immagine {%- endcomment -%}
  #shopify-section-{{ section.id }} .fr-inspirational__media {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .fr-inspirational__image {
    width: 100%;
    height: 100%;
    object-fit: {{ section.settings.image_fit }};
    transition: transform {{ section.settings.animation_speed }}ms ease-out;
  }

  {%- comment -%} Overlay Elegante {%- endcomment -%}
  #shopify-section-{{ section.id }} .fr-inspirational__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(var(--fr-overlay-gradient));
    opacity: 0;
    transition: opacity {{ section.settings.animation_speed }}ms ease;
    display: flex;
    flex-direction: column;
    justify-content: {{ section.settings.content_position }};
    padding: 24px;
    z-index: 1;
  }

  #shopify-section-{{ section.id }} .fr-inspirational__content {
    transform: translateY(20px);
    transition: transform {{ section.settings.animation_speed }}ms ease;
  }

  #shopify-section-{{ section.id }} .fr-inspirational__content-title {
    color: {{ section.settings.overlay_title_color }};
    font-size: {{ section.settings.overlay_title_size }}px;
    font-weight: 600;
    margin-bottom: 8px;
    letter-spacing: 0.02em;
  }

  #shopify-section-{{ section.id }} .fr-inspirational__content-text {
    color: {{ section.settings.overlay_text_color }};
    font-size: {{ section.settings.overlay_text_size }}px;
    line-height: 1.5;
    margin-bottom: 16px;
    opacity: 0.95;
  }

  #shopify-section-{{ section.id }} .fr-inspirational__cta {
    display: inline-block;
    padding: {{ section.settings.cta_padding_y }}px {{ section.settings.cta_padding_x }}px;
    background: {{ section.settings.cta_bg_color }};
    color: {{ section.settings.cta_text_color }};
    text-decoration: none;
    border-radius: {{ section.settings.cta_radius }}px;
    font-size: {{ section.settings.cta_size }}px;
    font-weight: {{ section.settings.cta_weight }};
    letter-spacing: 0.05em;
    transition: var(--fr-transition);
    text-transform: uppercase;
  }

  {%- comment -%} Badge Prezzo Prodotti {%- endcomment -%}
  #shopify-section-{{ section.id }} .fr-inspirational__price {
    position: absolute;
    top: 16px;
    right: 16px;
    background: rgba(254, 254, 254, 0.95);
    backdrop-filter: blur(10px);
    padding: 8px 16px;
    border-radius: 24px;
    font-weight: 600;
    color: {{ section.settings.price_color }};
    font-size: 14px;
    z-index: 2;
  }

  {%- comment -%} Animazioni Hover Desktop {%- endcomment -%}
  @media (hover: hover) and (min-width: 769px) {
    #shopify-section-{{ section.id }} .fr-inspirational__item:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
    }

    #shopify-section-{{ section.id }} .fr-inspirational__item:hover .fr-inspirational__image {
      transform: scale({{ section.settings.hover_scale | divided_by: 100.0 }});
    }

    #shopify-section-{{ section.id }} .fr-inspirational__item:hover .fr-inspirational__overlay {
      opacity: 1;
    }

    #shopify-section-{{ section.id }} .fr-inspirational__item:hover .fr-inspirational__content {
      transform: translateY(0);
    }

    #shopify-section-{{ section.id }} .fr-inspirational__cta:hover {
      background: {{ section.settings.cta_hover_bg }};
      transform: translateX(4px);
    }

    {%- comment -%} Animazioni Hover Speciali per Layout {%- endcomment -%}
    {%- if section.settings.layout_style == 'scattered' -%}
      #shopify-section-{{ section.id }} .fr-inspirational__item:hover {
        transform: rotate(0deg) translateY(-4px) !important;
      }
    {%- endif -%}
  }

  {%- comment -%} Animazioni Mobile Touch {%- endcomment -%}
  @media only screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .fr-inspirational__overlay {
      opacity: 1;
      background: linear-gradient(to bottom, transparent 40%, rgba(0, 0, 0, 0.8) 100%);
    }

    #shopify-section-{{ section.id }} .fr-inspirational__content {
      transform: translateY(0);
    }

    #shopify-section-{{ section.id }} .fr-inspirational__item {
      opacity: 0;
      transform: translateY(30px);
    }

    #shopify-section-{{ section.id }} .fr-inspirational__item.is-visible {
      opacity: 1;
      transform: translateY(0);
    }
  }

  {%- comment -%} Animazioni Entry {%- endcomment -%}
  @keyframes fr-float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  @keyframes fr-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.02); }
  }

  @keyframes fr-fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  #shopify-section-{{ section.id }} .fr-inspirational__item--animated {
    animation: fr-fade-in 0.6s ease-out forwards;
  }

  {%- for i in (1..12) -%}
    #shopify-section-{{ section.id }} .fr-inspirational__item:nth-child({{ i }}) {
      animation-delay: {{ i | times: 0.1 }}s;
    }
  {%- endfor -%}
</style>

<section class="fr-inspirational" data-section-id="{{ section.id }}">
  <div class="fr-inspirational__wrapper">
    {%- if section.settings.title != blank or section.settings.subtitle != blank -%}
      <header class="fr-inspirational__header">
        {%- if section.settings.title != blank -%}
          <h2 class="fr-inspirational__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="fr-inspirational__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </header>
    {%- endif -%}

    <div class="fr-inspirational__grid" data-layout="{{ section.settings.layout_style }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          
          {%- when 'image' -%}
            <article id="block-{{ block.id }}" 
                     class="fr-inspirational__item fr-inspirational__item--animated"
                     {{ block.shopify_attributes }}>
              {%- if block.settings.link != blank -%}
                <a href="{{ block.settings.link }}" class="fr-inspirational__link">
              {%- endif -%}
                
                <div class="fr-inspirational__media">
                  {%- if block.settings.image != blank -%}
                    <img class="fr-inspirational__image lazyload"
                         src="{{ block.settings.image | img_url: '50x50' }}"
                         data-src="{{ block.settings.image | img_url: '1400x1400' }}"
                         data-sizes="auto"
                         alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                         loading="lazy">
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'fr-inspirational__image' }}
                  {%- endif -%}
                </div>

                {%- if block.settings.show_overlay -%}
                  <div class="fr-inspirational__overlay">
                    <div class="fr-inspirational__content">
                      {%- if block.settings.title != blank -%}
                        <h3 class="fr-inspirational__content-title">{{ block.settings.title }}</h3>
                      {%- endif -%}
                      {%- if block.settings.description != blank -%}
                        <p class="fr-inspirational__content-text">{{ block.settings.description }}</p>
                      {%- endif -%}
                      {%- if block.settings.cta_text != blank -%}
                        <span class="fr-inspirational__cta">{{ block.settings.cta_text }}</span>
                      {%- endif -%}
                    </div>
                  </div>
                {%- endif -%}
                
              {%- if block.settings.link != blank -%}
                </a>
              {%- endif -%}
            </article>

          {%- when 'product' -%}
            {%- assign product = all_products[block.settings.product] -%}
            {%- if product != blank -%}
              <article id="block-{{ block.id }}" 
                       class="fr-inspirational__item fr-inspirational__item--animated"
                       {{ block.shopify_attributes }}>
                <a href="{{ product.url }}" class="fr-inspirational__link">
                  
                  <div class="fr-inspirational__media">
                    {%- assign product_image = block.settings.custom_image | default: product.featured_image -%}
                    {%- if product_image != blank -%}
                      <img class="fr-inspirational__image lazyload"
                           src="{{ product_image | img_url: '50x50' }}"
                           data-src="{{ product_image | img_url: '1400x1400' }}"
                           data-sizes="auto"
                           alt="{{ product_image.alt | default: product.title | escape }}"
                           loading="lazy">
                    {%- else -%}
                      {{ 'product-1' | placeholder_svg_tag: 'fr-inspirational__image' }}
                    {%- endif -%}
                  </div>

                  {%- if block.settings.show_price -%}
                    <div class="fr-inspirational__price">
                      {{ product.price | money }}
                    </div>
                  {%- endif -%}

                  {%- if block.settings.show_overlay -%}
                    <div class="fr-inspirational__overlay">
                      <div class="fr-inspirational__content">
                        <h3 class="fr-inspirational__content-title">{{ product.title }}</h3>
                        {%- if block.settings.description != blank -%}
                          <p class="fr-inspirational__content-text">{{ block.settings.description }}</p>
                        {%- elsif product.description != blank -%}
                          <p class="fr-inspirational__content-text">{{ product.description | strip_html | truncate: 100 }}</p>
                        {%- endif -%}
                        <span class="fr-inspirational__cta">{{ block.settings.cta_text | default: 'Scopri' }}</span>
                      </div>
                    </div>
                  {%- endif -%}
                  
                </a>
              </article>
            {%- endif -%}

          {%- when 'collection' -%}
            {%- assign collection = collections[block.settings.collection] -%}
            {%- if collection != blank -%}
              <article id="block-{{ block.id }}" 
                       class="fr-inspirational__item fr-inspirational__item--animated"
                       {{ block.shopify_attributes }}>
                <a href="{{ collection.url }}" class="fr-inspirational__link">
                  
                  <div class="fr-inspirational__media">
                    {%- assign collection_image = block.settings.custom_image | default: collection.image -%}
                    {%- if collection_image != blank -%}
                      <img class="fr-inspirational__image lazyload"
                           src="{{ collection_image | img_url: '50x50' }}"
                           data-src="{{ collection_image | img_url: '1400x1400' }}"
                           data-sizes="auto"
                           alt="{{ collection_image.alt | default: collection.title | escape }}"
                           loading="lazy">
                    {%- else -%}
                      {{ 'collection-1' | placeholder_svg_tag: 'fr-inspirational__image' }}
                    {%- endif -%}
                  </div>

                  {%- if block.settings.show_overlay -%}
                    <div class="fr-inspirational__overlay">
                      <div class="fr-inspirational__content">
                        <h3 class="fr-inspirational__content-title">{{ collection.title }}</h3>
                        {%- if block.settings.description != blank -%}
                          <p class="fr-inspirational__content-text">{{ block.settings.description }}</p>
                        {%- elsif collection.description != blank -%}
                          <p class="fr-inspirational__content-text">{{ collection.description | strip_html | truncate: 100 }}</p>
                        {%- endif -%}
                        <span class="fr-inspirational__cta">{{ block.settings.cta_text | default: 'Esplora' }}</span>
                      </div>
                    </div>
                  {%- endif -%}
                  
                </a>
              </article>
            {%- endif -%}

        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.querySelector('[data-section-id="{{ section.id }}"]');
  if (!section) return;
  
  const items = section.querySelectorAll('.fr-inspirational__item');
  const isMobile = window.innerWidth <= 768;
  
  // Animazione scroll mobile con Intersection Observer
  if (isMobile && items.length > 0) {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -10% 0px'
    };
    
    const observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry, index) {
        if (entry.isIntersecting) {
          setTimeout(function() {
            entry.target.classList.add('is-visible');
          }, index * 50);
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);
    
    items.forEach(function(item) {
      observer.observe(item);
    });
  }
  
  // Lazy loading immagini con Intersection Observer
  const lazyImages = section.querySelectorAll('.lazyload');
  if ('IntersectionObserver' in window && lazyImages.length > 0) {
    const imageObserver = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          const img = entry.target;
          if (img.dataset.src) {
            img.src = img.dataset.src;
            img.classList.remove('lazyload');
            img.classList.add('lazyloaded');
          }
          imageObserver.unobserve(img);
        }
      });
    }, {
      rootMargin: '50px 0px'
    });
    
    lazyImages.forEach(function(img) {
      imageObserver.observe(img);
    });
  }
  
  // Gestione layout speciali
  const layoutStyle = section.querySelector('.fr-inspirational__grid').dataset.layout;
  
  if (layoutStyle === 'masonry' && !isMobile) {
    // Ottimizzazione layout masonry
    const grid = section.querySelector('.fr-inspirational__grid');
    const resizeObserver = new ResizeObserver(function() {
      requestAnimationFrame(function() {
        grid.style.gridAutoFlow = 'dense';
      });
    });
    resizeObserver.observe(grid);
  }
  
  // Preload immagini critiche (prime 3)
  const criticalImages = section.querySelectorAll('.fr-inspirational__image:nth-child(-n+3)');
  criticalImages.forEach(function(img) {
    if (img.dataset.src) {
      const link = document.createElement('link');
      link.rel = 'preload';
      link.as = 'image';
      link.href = img.dataset.src;
      document.head.appendChild(link);
    }
  });
});
</script>

