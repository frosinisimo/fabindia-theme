  Footer minimale e ultra-ottimizzato per Fabindia Roma
  Design pulito, funzionale e performante
{% endcomment %}

<style>
  /* === UTILITY FUNCTIONS STYLES === */
  @media only screen and (min-width: 769px) {
    #shopify-section-{{ section.id }} {
      {%- unless section.settings.max_width == 'default' -%}
        max-width: {{ section.settings.max_width }};
        margin-left: auto;
        margin-right: auto;
      {%- endunless -%}
      
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
      margin-top: {{ section.settings.margin_top_desktop }}px;
      margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
      
      {%- if section.settings.hide_on_desktop -%}
        display: none !important;
      {%- endif -%}
    }
  }

  @media only screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      margin-top: {{ section.settings.margin_top_mobile }}px;
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
      
      {%- if section.settings.hide_on_mobile -%}
        display: none !important;
      {%- endif -%}
    }
  }

  {%- if section.settings.enable_smooth_transitions -%}
    #shopify-section-{{ section.id }} {
      transition: all 0.3s ease;
    }
  {%- endif -%}

  /* === FOOTER STYLES === */
  .fabindia-footer {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    border-top: 1px solid {{ section.settings.border_color }};
  }

  .fabindia-footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .fabindia-footer__main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    padding: 40px 0;
  }

  /* Titoli */
  .fabindia-footer__heading {
    color: {{ section.settings.heading_color }};
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 20px;
    letter-spacing: 0.5px;
    text-transform: uppercase;
  }

  /* Links */
  .fabindia-footer a {
    color: {{ section.settings.link_color }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .fabindia-footer a:hover {
    color: {{ section.settings.link_hover_color }};
  }

  /* Company Info */
  .fabindia-footer__logo {
    max-width: 150px;
    height: auto;
    margin-bottom: 20px;
  }

  .fabindia-footer__info {
    line-height: 1.8;
    font-size: 14px;
  }

  .fabindia-footer__info p {
    margin-bottom: 8px;
  }

  /* Menu */
  .fabindia-footer__menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .fabindia-footer__menu-item {
    margin-bottom: 10px;
    font-size: 14px;
  }

  /* Newsletter */
  .fabindia-footer__newsletter-form {
    display: flex;
    margin-top: 15px;
    max-width: 100%;
  }

  .fabindia-footer__newsletter-input {
    flex: 1;
    padding: 12px 16px;
    border: 1px solid {{ section.settings.input_border_color }};
    background-color: transparent;
    color: {{ section.settings.text_color }};
    font-size: 14px;
    border-radius: 0;
  }

  .fabindia-footer__newsletter-input::placeholder {
    color: {{ section.settings.text_color }};
    opacity: 0.6;
  }

  .fabindia-footer__newsletter-button {
    padding: 12px 24px;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text }};
    border: none;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.5px;
    transition: background-color 0.2s ease;
    white-space: nowrap;
  }

  .fabindia-footer__newsletter-button:hover {
    background-color: {{ section.settings.button_hover_bg }};
  }

  /* Social Icons */
  .fabindia-footer__social {
    display: flex;
    gap: 16px;
    margin-top: 20px;
  }

  .fabindia-footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border: 1px solid {{ section.settings.social_border_color }};
    border-radius: 50%;
    transition: all 0.2s ease;
  }

  .fabindia-footer__social-link:hover {
    background-color: {{ section.settings.accent_color }};
    border-color: {{ section.settings.accent_color }};
  }

  .fabindia-footer__social-link svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }

  /* WhatsApp Button */
  .fabindia-footer__whatsapp {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin-top: 16px;
    padding: 10px 20px;
    background-color: #25D366;
    color: white;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 500;
    transition: transform 0.2s ease;
  }

  .fabindia-footer__whatsapp:hover {
    transform: translateY(-2px);
    color: white;
  }

  .fabindia-footer__whatsapp svg {
    width: 18px;
    height: 18px;
  }

  /* Bottom Bar */
  .fabindia-footer__bottom {
    border-top: 1px solid {{ section.settings.border_color }};
    padding: 20px 0;
    text-align: center;
    font-size: 13px;
    opacity: 0.8;
  }

  .fabindia-footer__payment {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-top: 12px;
    flex-wrap: wrap;
  }

  .fabindia-footer__payment svg {
    height: 24px;
    opacity: 0.6;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .fabindia-footer__main {
      grid-template-columns: 1fr;
      gap: 30px;
      padding: 30px 0;
    }

    .fabindia-footer__newsletter-form {
      flex-direction: column;
    }

    .fabindia-footer__newsletter-input,
    .fabindia-footer__newsletter-button {
      width: 100%;
    }

    .fabindia-footer__newsletter-button {
      margin-top: 10px;
    }

    .fabindia-footer__social {
      justify-content: center;
    }

    .fabindia-footer__heading {
      font-size: 14px;
    }
  }

  /* Form Success */
  .fabindia-footer .form-success {
    color: #25D366;
    margin-top: 10px;
  }

  .fabindia-footer .form-error {
    color: {{ section.settings.accent_color }};
    margin-top: 10px;
    font-size: 13px;
  }
</style>

