              <img 
                src="{{ block.settings.logo | img_url: '300x' }}" 
                alt="{{ shop.name }}"
                class="fabindia-footer__logo"
                loading="lazy"
                width="150"
                height="{{ 150 | divided_by: block.settings.logo.aspect_ratio | round }}"
              >
            {%- else -%}
              <h2 class="fabindia-footer__heading">{{ shop.name }}</h2>
            {%- endif -%}
            
            <div class="fabindia-footer__info">
