    background-color: {{ section.settings.section_background }};
    position: relative;
    overflow: hidden;
  }

  #{{ section_id }} .testimonials-header {
    text-align: center;
    margin-bottom: 50px;
  }

  #{{ section_id }} .section-title {
    font-size: 2.5rem;
    font-weight: 300;
    color: {{ section.settings.title_color }};
    margin-bottom: 20px;
    letter-spacing: 1px;
  }

  #{{ section_id }} .section-subtitle {
    font-size: 1.1rem;
    color: {{ section.settings.text_color }};
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  {%- comment -%} === FILTER BUTTONS === {%- endcomment -%}
  #{{ section_id }} .filter-buttons {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-bottom: 40px;
    flex-wrap: wrap;
  }

  #{{ section_id }} .filter-btn {
    background: transparent;
    border: 1px solid {{ section.settings.accent_color }};
    color: {{ section.settings.text_color }};
    padding: 8px 20px;
    border-radius: 25px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
  }

  #{{ section_id }} .filter-btn:hover,
  #{{ section_id }} .filter-btn.active {
    background: {{ section.settings.accent_color }};
    color: #ffffff;
    transform: translateY(-2px);
  }

  {%- comment -%} === TESTIMONIALS CONTAINER === {%- endcomment -%}
  #{{ section_id }} .testimonials-container {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  #{{ section_id }} .testimonials-wrapper {
    display: flex;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    gap: 30px;
  }

  #{{ section_id }} .testimonial-card {
    flex: 0 0 100%;
    background: {{ section.settings.card_background }};
    border-radius: 15px;
    padding: 40px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    position: relative;
    transition: all 0.3s ease;
  }

  #{{ section_id }} .testimonial-card.hidden {
    display: none;
  }

