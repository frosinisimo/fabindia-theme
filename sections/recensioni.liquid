  #{{ section_id }} .nav-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: {{ section.settings.card_background }};
    border: 1px solid {{ section.settings.accent_color }};
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }

