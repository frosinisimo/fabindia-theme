      transition: all 0.3s ease;
    }
  {%- endif -%}
</style>

<section id="{{ section_id }}" class="testimonials-section">
  <div class="container">
    {%- if section.settings.section_title != blank or section.settings.section_subtitle != blank -%}
      <div class="testimonials-header">
        {%- if section.settings.section_title != blank -%}
          <h2 class="section-title">{{ section.settings.section_title }}</h2>
        {%- endif -%}
        {%- if section.settings.section_subtitle != blank -%}
          <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.settings.show_filters -%}
      <div class="filter-buttons">
        <button class="filter-btn active" data-filter="all">Tutte</button>
        <button class="filter-btn" data-filter="clothing">Abbigliamento</button>
        <button class="filter-btn" data-filter="accessories">Accessori</button>
        <button class="filter-btn" data-filter="home">Casa</button>
      </div>
    {%- endif -%}

    <div class="testimonials-container">
      <div class="testimonials-wrapper" data-current="0">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'testimonial' -%}
              <div class="testimonial-card" data-category="{{ block.settings.category }}" {{ block.shopify_attributes }}>
                <div class="quote-icon">
                  <svg viewBox="0 0 24 24">
                    <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"/>
                  </svg>
                </div>
                
                {%- if block.settings.rating > 0 -%}
                  <div class="rating">
                    {%- for i in (1..5) -%}
                      <div class="star">
                        <svg viewBox="0 0 24 24">
                          {%- if i <= block.settings.rating -%}
                            <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                          {%- else -%}
                            <path d="M22 9.24l-7.19-.62L12 2 9.19 8.63 2 9.24l5.45 4.73L5.82 21 12 17.27 18.18 21l-1.63-7.03L22 9.24zM12 15.4l-3.76 2.27 1-4.28-3.32-2.88 4.38-.38L12 6.1l1.71 4.04 4.38.38-3.32 2.88 1 4.28L12 15.4z"/>
                          {%- endif -%}
                        </svg>
                      </div>
                    {%- endfor -%}
                  </div>
                {%- endif -%}
                
                <p class="testimonial-text">{{ block.settings.testimonial_text }}</p>
                
                <div class="testimonial-author">
                  <div class="author-avatar">
                    {{ block.settings.author_name | truncate: 1, '' | upcase }}
                  </div>
                  <div class="author-info">
                    <h4>{{ block.settings.author_name }}</h4>
                    {%- if block.settings.author_title != blank -%}
                      <p>{{ block.settings.author_title }}</p>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            {%- endcase -%}
        {%- endfor -%}
      </div>

      {%- if testimonials_count > 1 -%}
        <button class="nav-button nav-prev" aria-label="Testimonianza precedente">
          <svg viewBox="0 0 24 24">
            <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
          </svg>
        </button>
        <button class="nav-button nav-next" aria-label="Testimonianza successiva">
          <svg viewBox="0 0 24 24">
            <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
          </svg>
        </button>

        <div class="pagination">
          {%- for i in (0..testimonials_count) -%}
            {%- if i < testimonials_count -%}
              <span class="dot {% if i == 0 %}active{% endif %}" data-index="{{ i }}"></span>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.getElementById('{{ section_id }}');
  const wrapper = section.querySelector('.testimonials-wrapper');
  const cards = section.querySelectorAll('.testimonial-card');
  const prevBtn = section.querySelector('.nav-prev');
  const nextBtn = section.querySelector('.nav-next');
  const dots = section.querySelectorAll('.dot');
  const filterBtns = section.querySelectorAll('.filter-btn');
  
  let currentIndex = 0;
  let visibleCards = Array.from(cards);
  let cardsPerView = window.innerWidth >= 1025 ? 2 : 1;
  
  // Update cards per view on resize
  window.addEventListener('resize', function() {
    cardsPerView = window.innerWidth >= 1025 ? 2 : 1;
    updateSlider();
  });
  
  // Filter functionality
  if (filterBtns.length > 0) {
    filterBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const filter = this.dataset.filter;
        
        // Update active button
        filterBtns.forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        
        // Filter cards
        if (filter === 'all') {
          cards.forEach(card => card.classList.remove('hidden'));
          visibleCards = Array.from(cards);
        } else {
          cards.forEach(card => {
            if (card.dataset.category === filter) {
              card.classList.remove('hidden');
            } else {
              card.classList.add('hidden');
            }
          });
          visibleCards = Array.from(cards).filter(card => !card.classList.contains('hidden'));
        }
        
        // Reset to first slide
        currentIndex = 0;
        updateSlider();
        updateDots();
      });
    });
  }
  
  function updateSlider() {
    const cardWidth = 100 / cardsPerView;
    const translateX = -currentIndex * cardWidth;
    wrapper.style.transform = `translateX(${translateX}%)`;
  }
  
  function updateDots() {
    dots.forEach((dot, index) => {
      if (index === Math.floor(currentIndex / cardsPerView)) {
        dot.classList.add('active');
      } else {
        dot.classList.remove('active');
      }
    });
  }
  
  function nextSlide() {
    const maxIndex = Math.max(0, visibleCards.length - cardsPerView);
    if (currentIndex < maxIndex) {
      currentIndex++;
      updateSlider();
      updateDots();
    }
  }
  
  function prevSlide() {
    if (currentIndex > 0) {
      currentIndex--;
      updateSlider();
      updateDots();
    }
  }
  
  // Navigation buttons
  if (nextBtn) nextBtn.addEventListener('click', nextSlide);
  if (prevBtn) prevBtn.addEventListener('click', prevSlide);
  
  // Pagination dots
  dots.forEach((dot, index) => {
    dot.addEventListener('click', function() {
      currentIndex = index * cardsPerView;
      updateSlider();
      updateDots();
    });
  });
  
  // Touch/swipe support for mobile
  let touchStartX = 0;
  let touchEndX = 0;
  
  wrapper.addEventListener('touchstart', function(e) {
    touchStartX = e.changedTouches[0].screenX;
  });
  
  wrapper.addEventListener('touchend', function(e) {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
  });
  
  function handleSwipe() {
    if (touchEndX < touchStartX - 50) nextSlide();
    if (touchEndX > touchStartX + 50) prevSlide();
  }
  
  // Auto-play functionality
  {%- if section.settings.enable_autoplay -%}
    let autoplayInterval;
    
    function startAutoplay() {
      autoplayInterval = setInterval(function() {
        const maxIndex = Math.max(0, visibleCards.length - cardsPerView);
        if (currentIndex < maxIndex) {
          nextSlide();
        } else {
          currentIndex = 0;
          updateSlider();
          updateDots();
        }
      }, {{ section.settings.autoplay_speed }} * 1000);
    }
    
    function stopAutoplay() {
      clearInterval(autoplayInterval);
    }
    
    startAutoplay();
    
    // Pause on hover
    wrapper.addEventListener('mouseenter', stopAutoplay);
    wrapper.addEventListener('mouseleave', startAutoplay);
  {%- endif -%}
});
</script>

