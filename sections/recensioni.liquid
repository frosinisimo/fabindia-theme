    left: -25px;
  }

  #{{ section_id }} .nav-next {
    right: -25px;
  }

  {%- comment -%} === PAGINATION DOTS === {%- endcomment -%}
  #{{ section_id }} .pagination {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 30px;
  }

  #{{ section_id }} .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: {{ section.settings.text_color }};
    opacity: 0.3;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  #{{ section_id }} .dot.active {
    background: {{ section.settings.accent_color }};
    opacity: 1;
    transform: scale(1.2);
  }

  {%- comment -%} === MOBILE STYLES === {%- endcomment -%}
