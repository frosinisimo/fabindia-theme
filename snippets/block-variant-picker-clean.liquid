    width: 100%;
    overflow: hidden;
    box-sizing: border-box;
  }
  
  #shopify-section-{{ section.id }} .fr-variant-container {
    width: 100%;
    margin-bottom: 0px;
    overflow: hidden;
    box-sizing: border-box;
  }
  
