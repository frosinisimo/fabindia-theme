          <h4 class="ft-step-title" style="color: {{ block.settings.text_color }};">{{ block.settings.delivery_title }}</h4>
          <p class="ft-step-date" id="delivery-date-{{ block.id }}" style="color: {{ block.settings.date_color }};">1 giorno</p>
